<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="3"
	    android:orientation="horizontal">
	    <LinearLayout
		    android:layout_width="0dp"
		    android:layout_weight="3"
		    android:layout_marginLeft="220dp"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
	        <ImageView
	            android:layout_width="120dp"
	            android:layout_marginTop="40dp"
	            android:layout_height="120dp"
	            android:layout_marginLeft="35dp"
	            android:background="@drawable/icon_head" />
	        <TextView
	            android:id="@+id/tv_phone_calling"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="24dp"
	            android:text="@string/dailing"
	            android:textColor="#FFFFFF"
	            android:textSize="@dimen/incoming_phone_number" />
	    </LinearLayout>
	    <RelativeLayout
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="16dp"
	        android:layout_marginRight="51dp">
	       
	        <ImageView
	            android:layout_width="50dp"
	            android:layout_height="170dp"
	            android:layout_marginTop="40dp"
	            android:layout_marginLeft="10dp"
	            android:id="@+id/bt_voice_set"
	            android:visibility="gone"
	            android:background="@drawable/voice_bg"
	            />
	         <ImageView
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:id="@+id/bt_voice_show"
	            android:background="@drawable/bt_voice_selector"
	            />
	         <TextView
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:id="@+id/volme_text"
	             android:text="@string/current_vloume"
	             android:textSize="12sp"
	             android:layout_marginTop="64dp"
	             android:layout_marginLeft="22dp"
	             android:textColor="#FF9B9B9B"
	             android:visibility="gone"
	             />
	         <com.ls.bt.utils.VerticalSeekbar
	             android:layout_marginTop="65dp"
	             android:layout_width="wrap_content"
	             android:layout_height="155dp"
	             android:layout_marginLeft="19dp"
	             android:visibility="gone"
	             android:id="@+id/vertical_seekbar"
	             android:focusable="true"
	             />
	    </RelativeLayout>    
	 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="89dp"
        android:layout_marginRight="89dp"   
        android:orientation="horizontal" >
	     <ImageButton
            android:id="@+id/switch_digit_key"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="left|top"
            android:layout_height="60dp"
            android:background="@drawable/bt_digit_open_selector" />

         <ImageButton
            android:id="@+id/ibt_off_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
 			android:layout_marginLeft="30dp"	
            android:layout_height="60dp"
            android:layout_gravity="center|top"
            android:background="@drawable/bt_phone_hang_selector" />

        <ImageButton
            android:id="@+id/ibt_bt_phone"
             android:layout_width="0dp"
            android:layout_weight="1"
 			android:layout_marginLeft="30dp"	
            android:layout_height="60dp"
            android:layout_gravity="right|top"
            android:background="@drawable/bt_voice_switch_selector" />
    </LinearLayout>

</LinearLayout>