<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<ImageView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/list_line"
	        />
	
    <LinearLayout
        style="@style/SettingLayoutDistance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/setting_bt_devname"
            style="@style/SettingLayoutTextView"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/setting_machine_name" />

        <EditText
            android:id="@+id/username_tv_setting"
            style="@style/SettingLayoutTextView"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLength="15"
            android:layout_height="wrap_content"
            android:layout_marginRight="68sp"
            android:text="" />
    </LinearLayout>

    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/list_line"
	        />
    <LinearLayout
        style="@style/SettingLayoutDistance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:visibility="visible"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_bt_devpwd"
            style="@style/SettingLayoutTextView"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/setting_pin_name" />

        <EditText
            android:id="@+id/password_tv_setting"
            style="@style/SettingLayoutTextView"
            android:layout_width="fill_parent"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_marginRight="68sp"
            android:text="@string/setting_pin_name_detail" />
    </LinearLayout>

    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/list_line"
	        />
    <LinearLayout
        style="@style/SettingLayoutDistance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/autoconnect_ibt_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
             android:id="@+id/tv_auto_connect"
            style="@style/SettingLayoutTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_auto_connect" />

        <!-- android:button="@drawable/bt_setting_selector" -->
    </LinearLayout>
    
	<ImageView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/list_line"
	        />
    <LinearLayout
        style="@style/SettingLayoutDistance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/autolistenr_ibt_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_auto_accept"
            style="@style/SettingLayoutTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/bt_auto_accept" />
    </LinearLayout>

</LinearLayout>