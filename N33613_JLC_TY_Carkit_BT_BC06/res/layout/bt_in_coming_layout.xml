<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_marginTop="20dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/icon_head" />

        <TextView
            android:id="@+id/incoming_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/incoming_phone_number" />

        
        <TextView
            android:id="@+id/incoming_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/incoming_phone_number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="150dip"
         android:layout_marginRight="150dip"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <ImageButton
            style="@style/incoming_bottom_btn"
            android:id="@+id/ibt_listener_phone"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:layout_marginRight="15dip"
            android:layout_weight="1"
            android:background="@drawable/incoming_answer_btn_selector" />

<!--         <ImageButton
            style="@style/incoming_bottom_btn"
            android:id="@+id/switch_digit_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:background="@drawable/bt_incoming_public_selector"
            android:src="@drawable/bt_digit_open" /> -->

        <ImageButton
            style="@style/incoming_bottom_btn" 
            android:id="@+id/ibt_off_phone"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/bt_phone_hang_selector" />

<!--         <ImageButton
            style="@style/incoming_bottom_btn"
            android:id="@+id/ibt_bt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/bt_incoming_public_selector"
            android:src="@drawable/bt_voice_switch" /> -->
    </LinearLayout>

</LinearLayout>